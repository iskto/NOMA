<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/us_cellLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_weight="1.20" >

        <ImageView
            android:id="@+id/ss_img"
            android:layout_width="match_parent"
            android:layout_height="358dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/ss_cellRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="13dp"
            android:paddingRight="10dp" >

            <RatingBar
                android:id="@+id/ss_rtbar"
                style="@style/myRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1.0" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ss_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#90000000"
                android:ellipsize="end"
                android:gravity="center|bottom|left"
                android:paddingLeft="12dp"
                android:textColor="#ffffff"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/ss_price"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#90000000"
                android:ellipsize="end"
                android:gravity="center|left|top"
                android:paddingLeft="12dp"
                android:textColor="#ffffff"
                android:textSize="18dp" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/ss_desc"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7.69"
        android:ellipsize="end"
        android:gravity="center|left"
        android:lines="2"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="20dp" />

</LinearLayout>


